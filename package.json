{
  "name": "openenvx",
  "displayName": "OpenEnvX",
  "description": "Manage encrypted secrets in .env files with OpenEnvX",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dotenv",
    "onLanguage:plaintext",
    "onLanguage:json",
    "onCommand:openenvx.scan"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openenvx.copySecret",
        "title": "Copy Secret",
        "category": "OpenEnvX"
      },
      {
        "command": "openenvx.runScriptWithOpenEnvX",
        "title": "Run script with OpenEnvX",
        "category": "OpenEnvX"
      },
      {
        "command": "openenvx.scan",
        "title": "Scan for secrets",
        "category": "OpenEnvX"
      }
    ],
    "configuration": {
      "title": "OpenEnvX",
      "properties": {
        "openenvx.cliPath": {
          "type": "string",
          "default": "",
          "description": "Path to openenvx CLI binary. Leave empty to auto-detect from PATH."
        }
      }
    }
  },
  "dependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}